<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.comma_store.shopping.ui.Search.SearchFragment"
        tools:layout="@layout/search_fragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_itemDetailsFragment3"
            app:destination="@id/itemDetailsFragment3"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/itemDetailsFragment3"
        android:name="com.comma_store.shopping.ui.ItemDetails.ItemDetailsFragment"
        android:label="ItemDetailsFragment" >


        <argument
            android:name="itemDetails"
            app:argType="com.comma_store.shopping.pojo.ItemModel"
            app:nullable="true" />
    </fragment>

</navigation>